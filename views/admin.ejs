<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Al-Burhan Industrial Drives</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <h1>AL-BURHAN INDUSTRIAL DRIVES</h1>
                <p class="tagline">40+ Years of Trusted Quality</p>
            </div>
            <ul class="nav-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/products">Products</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/cart">Cart</a></li>
                <% if (user && user.role === 'admin') { %>
                <li><a href="/admin" class="active">Admin</a></li>
                <% } %>
                <% if (user) { %>
                <li><a href="/logout">Logout</a></li>
                <% } else { %>
                <li><a href="/login">Login</a></li>
                <% } %>
            </ul>
            <div class="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <!-- Admin Dashboard Content -->
    <div class="admin-page">
        <div class="container">
            <h1 class="section-title">Admin Dashboard</h1>
            <p>Welcome, <%= user.username %>! Here you can view sales and add-to-cart activities.</p>

            <h2>Recent Orders</h2>
            <table class="orders-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.id %></td>
                        <td>₹<%= order.total %></td>
                        <td><%= order.status %></td>
                        <td><%= new Date(order.created_at).toLocaleDateString() %></td>
                        <td><a href="/admin/order/<%= order.id %>">View Details</a></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-col">
                    <h3>Al-Burhan Industrial Drives</h3>
                    <p>40+ Years of Trusted Quality in Power Transmission Equipment</p>
                </div>
                <div class="footer-col">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About Us</a></li>
                        <li><a href="/products">Products</a></li>
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Contact Info</h4>
                    <p>109/111 Nagdevi Street<br>Mumbai – 400003</p>
                    <p>Phone: <a href="tel:+919819036787">+91 9819036787</a></p>
                    <p>Email: <a href="mailto:alburhanind.drives@gmail.com">alburhanind.drives@gmail.com</a></p>
                </div>
                <div class="footer-col">
                    <h4>GSTIN</h4>
                    <p>27AAIPU5490Q1ZM</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Al-Burhan Industrial Drives. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="js/script.js"></script>
</body>
</html>