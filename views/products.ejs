    <!-- Products Page Content -->
    <div class="products-page">
        <div class="container">
            <h1 class="section-title">Our Complete Product Catalogue</h1>
            <p style="text-align: center; color: var(--text-light); margin-bottom: 40px; font-size: 18px;">
                Premium Power Transmission Components for Every Industrial Application
            </p>

            <div class="products-grid">
                <% products.forEach(product => { %>
                <div class="product-card">
                    <div class="product-image"><%= product.image %></div>
                    <div class="product-content">
                        <h3><%= product.name %></h3>
                        <p><%= product.description %></p>
                        <div class="product-specs">
                            <strong>Specs:</strong> <%= product.specs %>
                        </div>
                        <div style="margin-bottom: 10px;"><strong>Price: ₹<%= product.price %></strong></div>
                        <form action="/add-to-cart" method="POST" style="display: inline;">
                            <input type="hidden" name="productId" value="<%= product.id %>">
                            <input type="number" name="quantity" value="1" min="1" style="width: 60px;">
                            <button type="submit" class="btn">Add to Cart</button>
                        </form>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>

