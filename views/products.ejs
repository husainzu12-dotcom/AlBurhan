                <button id="learn-more" class="btn-learn">Learn More</button>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <h1>AL-BURHAN INDUSTRIAL DRIVES</h1>
                <p class="tagline">40+ Years of Trusted Quality</p>
            </div>
            <ul class="nav-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
